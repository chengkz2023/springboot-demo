<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.chengkz.mapper.EmpMapper">
    <insert id="insertEmp" keyColumn="emp_id" keyProperty="empId" parameterType="com.chengkz.pojo.Emp" useGeneratedKeys="true">
        insert into t_emp
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="empId != null">emp_id,</if>
            <if test="empName != null">emp_name,</if>
            <if test="empSalary != null">emp_salary,</if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="empId != null">#{empId,jdbcType=INTEGER},</if>
            <if test="empName != null">#{empName,jdbcType=CHAR},</if>
            <if test="empSalary != null">#{empSalary,jdbcType=DOUBLE},</if>
        </trim>
    </insert>
    <select id="queryAll" resultType="com.chengkz.pojo.Emp">
        select * from t_emp
    </select>
</mapper>